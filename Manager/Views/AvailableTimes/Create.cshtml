@model Manager.Models.AvailableTime

@{
    Layout = "";
    ViewBag.Title = "添加记录";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "AvailableTimes", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("时间", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TimeName, new SelectList(Manager.Models.Manager.GetCheckInTimeList(), "TimeName", "TimeName"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TimeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("优先级", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Demand, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Demand, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="添加" class="btn btn-success" />
            </div>
        </div>
    </div>
}
