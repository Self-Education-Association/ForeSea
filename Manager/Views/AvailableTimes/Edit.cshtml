@model Manager.Models.AvailableTime

@{
    Layout = "";
    ViewBag.Title = Model.TimeName;
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AvailableTimeId)
        @Html.HiddenFor(model => model.TimeName)

        <div class="form-group">
            @Html.Label("优先级", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Demand, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Demand, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-warning" />
            </div>
        </div>
    </div>
}
