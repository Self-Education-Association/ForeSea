@model IEnumerable<LST.Models.TestIndexViewModel>
@{
    Layout = "";
    int rest;
}

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            开始报名时间
        </th>
        <th>
            结束报名时间
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th>
            剩余名额
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        rest = item.Limit - item.Count;
        if (rest == 0)
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @item.Enabled
                </td>
                <td>
                    @rest
                </td>
                <td>
                    <a class="btn btn-default disabled">选择场次</a>
                </td>
            </tr>
        }
        else if (rest < item.Count)
        {
            <tr class="warning">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @item.Enabled
                </td>
                <td>
                    @rest
                </td>
                <td>
                    @Html.ActionLink("选择场次", "Apply", new { id = item.Id },new { @class="btn btn-success"})
                </td>
            </tr>
        }
        else
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @item.Enabled
                </td>
                <td>
                    @rest
                </td>
                <td>
                    @Html.ActionLink("选择场次", "Apply", new { id = item.Id },new { @class="btn btn-success"})
                </td>
            </tr>
        }
    }

</table>
