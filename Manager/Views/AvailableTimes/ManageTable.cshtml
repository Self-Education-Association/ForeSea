@model Manager.Models.ManagerTableHelper.ManageTable
@{
    Layout = null;
}

<table class="table table-bordered" align="center">
    <tr>
        <th align="center">节次</th>
        <th align="center">星期一</th>
        <th align="center">星期二</th>
        <th align="center">星期三</th>
        <th align="center">星期四</th>
        <th align="center">星期五</th>
        <th align="center">节次</th>
        <th align="center">星期六</th>
        <th align="center">星期日</th>
    </tr>
    @for (int i = 1; i <= 7; i++)
    {
        <tr>
            <td>第 @i 节</td>
            <td>@Model[10 + i].Manager.Name</td>
            <td>@Model[20 + i].Manager.Name</td>
            <td>@Model[30 + i].Manager.Name</td>
            <td>@Model[40 + i].Manager.Name</td>
            <td>@Model[50 + i].Manager.Name</td>
            <td>@if (i != 1) { @(string.Format("第 {0} 节", i - 1)); }</td>
            <td>@if (i != 1)
            { @Model[60 + i - 1].Manager.Name;
            }</td>
            <td>@if (i != 1)
            { @Model[70 + i - 1].Manager.Name;
            }</td>
        </tr>
    }
    <tfoot>
        <tr>
            效用试算值： @Model.Happiness
        </tr>
    </tfoot>
</table>
