@model LST.Models.IndexViewModel
@{
    ViewBag.Title = "管理";
}

<h2>@ViewBag.Title。</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>更改你的帐户设置</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>密码：</dt>
        <dd>
            [
            @Html.ActionLink("更改密码", "ChangePassword")
            ]
        </dd>
        <dt><span class="label label-danger">!</span>联系方式：</dt>
        <dd>
            [
            @Html.ActionLink("修改", "ChangeAccountProfile")
            ]
        </dd>
        <dt>账号状态：</dt>
        <dd>
            [
            @if (Model.HasIdentitied)
            {
                <a>启用</a>
            }
            else
            {
                <a>禁用</a>
            }
            ]
        </dd>
        <dt>报名功能：</dt>
        <dd>
            [
            @if (Model.HasEnabled)
            {
                <a>可以使用</a>
            }
            else
            {
                <a>无法使用</a>
            }
            ]
        </dd>
    </dl>
</div>
